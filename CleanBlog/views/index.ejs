<%- include('./header') %>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/<%- img %>-bg.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% posts.map((post) => { %>
          <div class="post-preview">
            <a href="./post">
              <h2 class="post-title">
                <%- post.postTitle %>
              </h2>
              <h3 class="post-subtitle">
                  <%- post.postSubTitle %>
              </h3>
            </a>
            <p class="post-meta"> <%- post.postMeta %> </p>
          </div>
          <hr>
          <% }) %>
          <!-- Pager -->
          <div class="clearfix">
            <a class="btn btn-secondary float-right" href="#">Older Posts &rarr;</a>
          </div>
        </div>
      </div>
    </div>

    <hr>

